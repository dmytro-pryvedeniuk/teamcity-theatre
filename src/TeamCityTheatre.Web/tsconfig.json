{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "lib": [ "dom", "es5", "es2015.promise", "scripthost" ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./Views/**/*.ts",
    "./Views/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
